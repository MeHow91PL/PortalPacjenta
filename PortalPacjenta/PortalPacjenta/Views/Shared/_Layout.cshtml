@{
    ViewBag.Title = "";
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/themes/base/css")
    @Styles.Render("~/Content/Layout")
    @Styles.Render("~/Content/bootstrap")
    @RenderSection("style", required: false)


</head>
<body style="padding: 0" id="bodyPrzychodnia" class="maxSzerokosc maxWysokosc">

    <div class="container-fluid maxWysokosc">
        <div class="maxWysokosc">
            <div class="sidebar" id="sidebarPrzychodnia">
                <div id="zwijaczMenu">&lt;&lt;</div>

                <ul id="navPortalPacjenta">
                    <li id="Terminarz-Sidebar">
                        <a href="@Url.Action("Index","RejestracjaOnline")" id="RejestacjaOnline">
                            <img class="img-responsive" src="~/Content/Images/unnamed.png" alt="Zarejestruj" />
                            <span>Umów wizytę</span>
                        </a>
                    </li>
                    <li id="Terminarz-Sidebar">
                        <a href="@Url.Action("Index","HistoriaWizyt")" id="HistoriaWizyt">
                            <img class="img-responsive" src="~/Content/Images/HistoriaWizytIcon.png" alt="Historia wizyt" />
                            <span>Historia wizyt</span>
                        </a>
                    </li>

                </ul>

                <div id="przychodnia-sidebar-footer">
                    @Html.ActionLink("Wyloguj", "Wyloguj", "Account")
                </div>


            </div>
            <div id="PrzychodniaBodyKontener" class="maxWysokosc">
                <div id="renderBody">

                    @RenderBody()

                </div>
                <div class="wysrodkujCentralnie maxWysokosc maxSzerokosc ukryty" id="loader-kontener">
                    <img id="loader" src="~/Content/Images/loader.gif" alt="Wczytuję..." />
                </div>
            </div>
        </div>

    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/Przychodnia")

    @RenderSection("scripts", required: false)

</body>
</html>
